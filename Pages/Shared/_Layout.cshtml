<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <title>@ViewData["Title"]</title>

    <!-- PWA / Mobile App Meta Tags -->
    <meta name="description" content="Fronius TPS 400i Quick Reference Guide for Welders">
    <meta name="theme-color" content="#09090B">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="Fronius Guide">
    <meta name="mobile-web-app-capable" content="yes">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@500&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- App Shell -->
    <div class="app-container">
        @RenderBody()
    </div>

    <!-- Bottom Navigation (Mobile) -->
    <nav class="bottom-nav d-md-none">
        <a href="#scenario" class="bottom-nav-item active" data-tab="scenario">
            <span class="material-icons-round">build</span>
            <span>Scenario</span>
        </a>
        <a href="#search" class="bottom-nav-item" data-tab="search">
            <span class="material-icons-round">search</span>
            <span>Search</span>
        </a>
        <a href="#process" class="bottom-nav-item" data-tab="process">
            <span class="material-icons-round">compare_arrows</span>
            <span>Compare</span>
        </a>
        <a href="#params" class="bottom-nav-item" data-tab="params">
            <span class="material-icons-round">tune</span>
            <span>Params</span>
        </a>
        <a href="#tips" class="bottom-nav-item" data-tab="tips">
            <span class="material-icons-round">lightbulb</span>
            <span>Tips</span>
        </a>
    </nav>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
